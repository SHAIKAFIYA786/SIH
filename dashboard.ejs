        // Function to change language for the content
        function changeLanguage(lang) {
            // Update text content based on selected language
            if (lang === 'hi') {
                document.getElementById('dashboard-text').innerText = 'डैशबोर्ड';
                document.getElementById('track-status-text').innerText = 'स्टेटस ट्रैक करें';
                document.getElementById('about-us-text').innerText = 'हमारे बारे में';
                document.getElementById('contact-us-text').innerText = 'संपर्क करें';
                document.getElementById('apply-certificate-text').innerText = 'यहां प्रमाणपत्र के लिए आवेदन करें';

            const utterance = new SpeechSynthesisUtterance(text);
            // Set language based on selected language
            if (lang === 'hi') {
                utterance.lang = 'hi-IN';  // Hindi (India)
            } else {
                utterance.lang = 'en-US';  // English (US)
            }
        
            // Speak the text
            speechSynthesis.speak(utterance);

                document.getElementById('apply-income-text').innerText = 'आय प्रमाणपत्र के लिए आवेदन करें';
                document.getElementById('apply-ews-text').innerText = 'ईडब्ल्यूएस प्रमाणपत्र के लिए आवेदन करें';
            } else {
                document.getElementById('dashboard-text').innerText = 'Dashboard';
                document.getElementById('track-status-text').innerText = 'Track Status';
                document.getElementById('about-us-text').innerText = 'About Us';
                document.getElementById('contact-us-text').innerText = 'Contact Us';
                document.getElementById('apply-certificate-text').innerText = 'Apply for certificate here';
                document.getElementById('apply-caste-text').innerText = 'Apply for Caste Certificate';
                document.getElementById('apply-income-text').innerText = 'Apply for Income Certificate';
                document.getElementById('apply-ews-text').innerText = 'Apply for EWS Certificate';
            }
            // Store the selected language in localStorage
            localStorage.setItem('language', lang);
        }
        
        // Initialize a timeout variable for hover delay
        let hoverTimer;
        
        // Add event listeners for each option
        document.querySelectorAll('.option,#dashboard-text, #track-status-text, #about-us-text, #contact-us-text').forEach(option => {
            option.addEventListener('mouseover', () => {
                // Get the current language selected (default is English)
                const currentLang = localStorage.getItem('language') || 'en';
        
                // Set a timeout to trigger after 5 seconds
                hoverTimer = setTimeout(() => {
                    speakText(option.innerText, currentLang);
                }, 1000); // 5000ms (5 seconds)
            });
        
            // Reset the timer if mouse leaves the option before 5 seconds
            option.addEventListener('mouseleave', () => {
                clearTimeout(hoverTimer);
            });
        });
        </script>
